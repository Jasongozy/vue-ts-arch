{
  "compilerOptions"               : {
    "allowJs"                       : true,
    "target"                        : "es2017",
    "lib"                           : ["es2017", "dom.iterable"],
    "module"                        : "commonjs",
    "moduleResolution"              : "node",
    "inlineSources"                 : false,
    "inlineSourceMap"               : true,
    "sourceMap"                     : false,
    "emitDecoratorMetadata"         : true,
    "experimentalDecorators"        : true,
    "removeComments"                : true,
    "noImplicitAny"                 : true,
    "suppressImplicitAnyIndexErrors": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
